<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择图片"
            android:textColor="@android:color/black"
            android:onClick="select"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原图文件大小："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_original_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------------"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原图bitmap大小："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_original_bitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------------"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/iv_compress_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压缩后图片大小："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_compress_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------------"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压缩后bitmap大小："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_compress_bitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------------"
            android:textColor="@android:color/black" />


    </LinearLayout>

</ScrollView>
